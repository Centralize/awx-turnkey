[Unit]
Description=AWX Dispatcher
After=syslog.target network.target
PartOf=awx.service
After=awx.service

[Service]
User=awx
Group=awx
EnvironmentFile=-/etc/sysconfig/awx
Environment=AWX_SETTINGS_FILE=/etc/tower/settings.py
Environment=PATH=/bin:/sbin:/usr/bin:/usr/sbin:/var/awx/venv/bin
ExecStart={{ awx_venv }}/bin/awx-manage run_dispatcher
Restart=on-failure
RestartSec=2s

[Install]
WantedBy=awx.service
